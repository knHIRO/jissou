<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">
  <div class="row">
<h2>ジャンル編集</h2>
    <div class="col-md-12">
       <%= form_with model: @genre, url: admin_genre_path(@genre.id),method: :patch do |f| %>
      <div class="form-group row form-inline">
       <%= f.label :name, "ジャンル名", class: "col-md-2" %>
       <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-md-4" %>
       <%= f.submit '変更を保存', class:"btn btn-success" %>
      </div>
       <% end %>
    </div>
  </div>
</div>