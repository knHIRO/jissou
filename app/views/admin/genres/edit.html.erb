<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <h2>ジャンル編集</h2>
    <div class="offset-md-1 col-md-8 ">
      <div class="form-group row form-inline">
       <%= form_with model: @genre, url: admin_genre_path(@genre.id),method: :patch do |f| %>
       <%= f.label :name, "ジャンル名", class: "col-md-4" %>
       <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-md-8" %>
      <tr>
       <p><td><%= f.submit '変更を保存', class:"btn btn-success" %></td></p>
      </tr>
       <% end %>
       <li>
         <%= link_to admin_items_path, class:"btn btn-outline-dark nav-link text-dark mr-5" do %>商品一覧
         <% end %>
       </li>

       </div>
       </div>
       </div>
       </div>