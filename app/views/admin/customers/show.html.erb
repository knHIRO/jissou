<div class="container">
	<div class="row">
	  <div class="offset-md-1 col-md-10 offset-md-1">
      <h2>花子さんの会員詳細</h2>

       <%= form_with model: [:admin, @customer] do |f| %>

      <div class="form-group row form-inline ">
      <%= f.label :id, "会員ID", class: "col-md-4" %>
      <span>
        <%= @customers.id %>
      </span>

      </div>
      <div class="form-group row form-inline ">
        <%= f.label :last_name, "氏名", class: "col-md-4" %>
        <span>
        <%= @customers.last_name %>
        </span>
      </div>

      <div class="form-group row form-inline ">
        <%= f.label :last_name_kana, "フリガナ", class: "col-md-4" %>
        <span>
        <%= @customers.last_name_kana %>
        </span>
      </div>

      <div class="form-group row form-inline ">
        <%= f.label :postal_code, "郵便番号", class: "col-md-4" %>
        <span>
        <%= @customers.postal_code %>
        </span>
      </div>

      <div class="form-group row form-inline ">
        <%= f.label :address, "住所", class: "col-md-4" %>
        <span>
        <%= @customers.address %>
        </span>
      </div>

      <div class="form-group row form-inline ">
        <%= f.label :telephone_number, "電話番号", class: "col-md-4" %>
        <span>
        <%= @customers.telephone_number %>
        </span>
      </div>

      <div class="form-group row form-inline ">
        <%= f.label :email, "メールアドレス", class: "col-md-4" %>
        <span>
        <%= @customers.email %>
        </span>
      </div>

      <div class="form-group row form-inline ">
        <%= f.label :email, "メールアドレス", class: "col-md-4" %>
        <span>
        <%= @customers.email %>
        </span>
      </div>

      <div class="form-group row form-inline ">
        <%= f.label :is_deleted, "会員ステータス", class: "col-md-4" %>
        <span>
        <%= @customers.is_deleted %>
        </span>
      </div>
      <div class="form-group row form-inline ">
      <%= link_to '編集する', edit_admin_customer_path(@customers), class:"btn btn-sm btn-success" %>
      <%= link_to '注文履歴一覧', admin_path(@customers), class:"btn btn-sm btn-success" %>
      <% end %>

    </div>
  </div>
</div>