<div class="container">
	<div class="row">
	  <h2>注文履歴一覧</h2>
	  <div class="offset-md-1 col-md-10 offset-md-1">

        <table class="table">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
        <tbody>
          <% @orders.each do |order| %>
          <% @goods = 0 %>
          <tr>
            <th>
              <span>
                <%= link_to order.updated_at, admin_order_path(order.id) %>
              </span>
            </th>
            <th>
              <span>
                <%= order.customer.last_name %><%= order.customer.first_name %>
              </span>
            </th>
            <th>
              <% order.order_details.each do |order_detail| %>
              <span>
                <% @goods += order_detail.amount %>
              </span>
              <% end %>
              <%= @goods %>
            </th>
            <th>
              <span>
                <%= order.status_i18n %>
              </span>
            </th>
            </tr>


          <% end %>
        </tbody>

      </table>


    </div>
  </div>
</div>
<%= paginate @orders %>