<div class="container">
	<div class="row">
	  <div class="offset-md-1 col-md-10 offset-md-1">
      <h2>商品新規登録new</h2>
      <%= form_with model: [:admin, @item] do |f| %>
      <div class="form-group row form-inline ">
      <%= f.label :profile_image, "商品画像", class: "col-md-4" %>
      <%= f.file_field :profile_image, class:"form-control-file item_image", placeholder: "プロフィール画像", accept: "image/*", class: "col-md-4" %>
      </div>

       <div class="form-group row form-inline ">
       <%= f.label :name, "商品名", class: "col-md-4" %>
       <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-md-3" %>
       </div>

       <div class="form-group row form-inline ">
       <%= f.label :introduction, "商品説明", class: "col-md-4" %>
       <%= f.text_field :introduction, autofocus: true, autocomplete: "introduction", class: "col-md-3" %>
       </div>

        <div class="form-group row form-inline">
          <%= f.label :genre_id, "ジャンル", class: "col-md-4" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %>
        </div>

        <div class="form-group row form-inline ">
       <%= f.label :price, "税抜価格", class: "col-md-4" %>
       <%= f.text_field :price, autofocus: true, autocomplete: "price", class: "col-md-3" %>円
       </div>

       <div class="form-group row form-inline ">
       <%= f.label :is_active, "販売ステータス", class: "col-md-4" %>
       <div class="form-group">
         <%= f.radio_button :is_active, :true %>
         <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
         <%= f.radio_button :is_active, :false %>
         <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>


       </div>
       </div>

      <div class="form-group">
        <%= f.submit '新規登録', class:"btn btn-success" %>
        </div>

      <% end %>




    </div>
  </div>
</div>