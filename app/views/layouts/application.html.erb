<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>

      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <a class="navbar-brand btn btn-outline-dark nav-link text-dark" href="#">LOGO</a>

          <ul class="navbar-nav ml-auto">

          <% if admin_signed_in? %>
            <li>
            <%= link_to admin_items_path, class:"btn btn-outline-dark nav-link text-dark mr-5" do %>商品一覧
            <% end %>
            </li>
          <li>
            <%= link_to admin_customers_path, class:"btn btn-outline-dark nav-link text-dark mr-5" do %>会員一覧
            <% end %>
          </li>
          <li>
            <%= link_to admin_path, class:"btn btn-outline-dark nav-link text-dark mr-5" do %>注文履歴一覧
            <% end %>
          </li>
          <li>
          <%= link_to admin_genres_path, class:"btn btn-outline-dark nav-link text-dark mr-5" do %>ジャンル一覧
            <% end %>
          </li>
          <li>
           <%= link_to destroy_admin_session_path, method: :delete,class:"btn btn-outline-dark nav-link text-dark mr-5" do %>ログアウト
            <% end %>
          </li>

           <% elsif customer_signed_in? %>
            <li>
            <%= link_to public_customers_path(current_customer), class:"btn btn-outline-dark nav-link text-dark mr-5" do %>マイページ
            <% end %>
            </li>
          <li>
            <%= link_to public_items_path, class:"btn btn-outline-dark nav-link text-dark mr-5" do %>商品一覧
            <% end %>
          </li>
          <li>
            <%= link_to public_cart_items_path, class:"btn btn-outline-dark nav-link text-dark mr-5" do %>カート
            <% end %>
          </li>
          <li>
           <%= link_to destroy_customer_session_path, method: :delete,class:"btn btn-outline-dark nav-link text-dark mr-5" do %>ログアウト
            <% end %>
          </li>


          <% else %>
          <li>
            <%= link_to about_path, class:"btn btn-outline-dark nav-link text-dark mr-5" do %>About
            <% end %>
          </li>
          <li>
            <%= link_to public_items_path, class:"btn btn-outline-dark nav-link text-dark mr-5" do %>商品一覧
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_registration_path, class:"btn btn-outline-dark nav-link text-dark mr-5" do %>新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_session_path, class:"btn btn-outline-dark nav-link text-dark mr-5" do %>ログイン
            <% end %>
          </li>
          <% end %>

          </ul>
        </div>
      </nav>


    </header>

    <main>
      <p class="border-top"></p>
      <p id="notice"><%= flash[:notice] %></p>
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">

  	    <div class="row">
    	    <div class="mx-auto">

    	    </div>
        </div>
      </div>
    </footer>

  </body>
</html>
