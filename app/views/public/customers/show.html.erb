<div class="container">
<h2>マイページ</h2>
	<div class="row">
	  <div class="offset-md-1 col-md-10 offset-md-1">
	    <%= form_with model: [:public, @customer] do |f| %>
	    <div class="form-group row form-inline ">
	      <p class="font-weight-bold">登録情報</p>
        <%= link_to '編集する', edit_public_customers_path(@customers), class:"btn btn-sm btn-success" %>
	    </div>

	    <table class="table table-bordered">
            <tbody>
            <tr>
              <th><%= f.label :last_name, "氏名", class: "col-md-4" %></th>
              <td><span><%= @customer.last_name %></span></td>
            </tr>

            <tr>
              <th><%= f.label :last_name_kana, "カナ", class: "col-md-4" %></th>
              <td><span><%= @customer.last_name_kana %></span></td>
            </tr>

            <tr>
              <th><%= f.label :postal_code, "郵便番号", class: "col-md-4" %></th>
              <td><span><%= @customer.postal_code %></span></td>
            </tr>

            <tr>
              <th><%= f.label :address, "住所", class: "col-md-4" %></th>
              <td><span><%= @customer.address %></span></td>
            </tr>

            <tr>
              <th><%= f.label :telephone_number, "電話番号", class: "col-md-4" %></th>
              <td><span><%= @customer.telephone_number %></span></td>
            </tr>

            <tr>
              <th><%= f.label :email, "メールアドレス", class: "col-md-4" %></th>
              <td><span><%= @customer.email %></span></td>
            </tr>
            </tbody>
      </table>
       <div class="form-group row form-inline ">
      <p class="font-weight-bold">配送先</p>
      <%= link_to '一覧を見る', public_addresses_path(@customers), class:"btn btn-sm btn-success" %>
      </div>
      <div class="form-group row form-inline ">
      <p class="font-weight-bold">注文履歴</p>
      <%= link_to '一覧を見る', public_orders_path(@customers), class:"btn btn-sm btn-success" %>
      </div>

	    <% end %>

	  </div>
	</div>
</div>