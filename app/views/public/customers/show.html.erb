<div class="container">
<h2>マイページ</h2>
	<div class="row">
    <div class="col-md-12">

	    <div class="form-group row form-inline ">
	      <p class="font-weight-bold">登録情報</p>
        <%= link_to '編集する', edit_public_customers_path, class:"btn btn-sm btn-success" %>
	    </div>

	    <table class="table table-bordered">
            <tbody>
            <tr>
              <th>氏名</th>
              <td><span><%= @customer.last_name %></span></td>
            </tr>

            <tr>
              <th>カナ</th>
              <td><span><%= @customer.last_name_kana %></span></td>
            </tr>

            <tr>
              <th>郵便番号</th>
              <td><span><%= @customer.postal_code %></span></td>
            </tr>

            <tr>
              <th>住所</th>
              <td><span><%= @customer.address %></span></td>
            </tr>

            <tr>
              <th>電話番号</th>
              <td><span><%= @customer.telephone_number %></span></td>
            </tr>

            <tr>
              <th>メールアドレス</th>
              <td><span><%= @customer.email %></span></td>
            </tr>
            </tbody>
      </table>
       <div class="form-group row form-inline ">
      <p class="font-weight-bold">配送先</p>
      <%= link_to '一覧を見る', public_addresses_path, class:"btn btn-sm btn-success" %>
      </div>
      <div class="form-group row form-inline ">
      <p class="font-weight-bold">注文履歴</p>
      <%= link_to '一覧を見る', public_orders_path, class:"btn btn-sm btn-success" %>
      </div>

    </div>
	</div>
</div>