<div class="container">
  <div class="row">
    <div class="col-md-3" >
	    <%= render 'public/items/info', genres: @genres %>
	  </div>
	  <div class="col-md-4">
	      <%= link_to new_admin_item_path(@items.id), class: "col-md-4" do %>
      <%= image_tag @items.get_profile_image(300,200) %>
      <% end %>
      </div>
      <div class="col-md-5">
	  <%= form_with model: CartItem.new, url: public_cart_items_path do |f| %>
	    <div class="form-group row form-inline ">
          <span>
            <%= @items.name %>
          </span>

        </div>
        <div class="form-group row form-inline ">
          <span>
            <%= @items.introduction %>
          </span>
          </div>
          <span>
            ¥<%= @items.price %>（税込）
          </span>
          <span>
          <%= f.hidden_field :item_id, value: @items.id %>
          <%= f.select :amount, *[1..9] %>
          </span>
          <%= f.submit 'カートに入れる', class:"btn btn-sm btn-success"  %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>