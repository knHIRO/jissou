<div class="container">
	<div class="row">
	  <div class="offset-md-1 col-md-10">
	    <div class="pull-left">
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group row form-inline ">
  <%= f.label :last_name, "名前（性）", class: "col-md-4" %>
  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" , class: "col-md-3"%>
  <%= f.label :last_name,"（名）", class: "col-md-2" %>
  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",class: "col-md-3" %>
  </div>

  <div class="form-group row form-inline ">
  <%= f.label :last_name_kana, "フリガナ（セイ）", class: "col-md-4" %>
  <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "col-md-3" %>
  <%= f.label :first_name_kana, "（メイ）", class: "col-md-2" %>
  <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "col-md-3" %>
</div>

  <div class="form-group row form-inline">
    <%= f.label :メールアドレス, class: "col-md-4" %>
　　<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-4" %>
  </div>

  <div class="form-group row form-inline">
    <%= f.label :郵便番号（ハイフンなし）, class: "col-md-4" %>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "col-md-4" %>
  </div>

  <div class="form-group row form-inline">
    <%= f.label :住所, class: "col-md-4"%>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "col-md-8" %>
  </div>

  <div class="form-group row form-inline">
    <%= f.label :電話番号（ハイフンなし）,class: "col-md-4"%>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "col-md-4" %>
  </div>

  <div class="form-group row form-inline">
    <%= f.label :パスワード, class: "col-md-3"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length%>文字以上)</em>
    <% end %>
         <%= f.password_field :password, autocomplete: "new-password", class: "col-md-4" %>
  </div>

 <div class="form-group row form-inline">
    <%= f.label :パスワード（確認用）, class: "col-md-4" %>
         <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-md-4" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<tr>
  <p><td><%= f.submit 'Update Book', class:"btn btn-success" %></td></p>
</tr>
  <li>
    <%= link_to admin_items_path, class:"btn btn-outline-dark nav-link text-dark mr-5" do %>商品一覧
    <% end %>
  </li>

  </div>
  </div>
  <div class="offset-md-1"></div>
  </div>
  </div>
<% end %>

<%= render "public/shared/links" %>
