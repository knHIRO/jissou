<div class="container">
<h2>注文履歴詳細</h2>
  <div class="row">
    <div class="col-md-6 offset-md-1">
      <p class="font-weight-bold">注文情報</p>
      <table class="table table-bordered">
        <tbody>
        <%= form_with model: [:public, @order] do |f| %>
        <tr>
          <th>注文日</th>
          <td><span><%= @order.created_at %></span></td>
        </tr>

        <tr>
          <th>配送先</th>
          <td>
            <p><%= @order.postal_code %></p>
            <p><%= @order.address %></p>
            <p><%= @order.name %></p>
          </td>
        </tr>

        <tr>
          <th>支払方法</th>
          <td><span><%= @order.payment_method_i18n %></span></td>
        </tr>

        <tr>
          <th>ステータス</th>
          <td><span><%= @order.status_i18n %></span></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>


    <div class="col-md-4 offset-md-1">
      <p class="font-weight-bold">請求情報</p>
      <table class="table table-bordered">
        <tbody>

        <tr>
          <th>商品合計</th>
          <td><span><%= @total %></span></td>
        </tr>

        <tr>
          <th>配送料</th>
          <td>
            <span><%= @order.postage %></span>
          </td>
        </tr>

        <tr>
          <th>ご請求額</th>
          <td><span><%= @total + @order.postage %></span></td>
        </tr>


        </tbody>
      </table>
    </div>

  </div>
  <div class="row">
    <div class="offset-md-1 col-md-10 offset-md-1">
      <p class="font-weight-bold">注文内容</p>
      <table class="table table-bordered">
         <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <th>
              <span>
                <%= order_detail.item.name %>
              </span>
            </th>
            <th>
              <span>
               <%= order_detail.item.with_tax_price %>
              </span>
            </th>
            <th>
              <span>
               <%= order_detail.amount %>
              </span>
            </th>
            <th>
              <span>
               <%= order_detail.subtotal %>
               <% @total += order_detail.subtotal %>
              </span>
            </th>
          </tr>
        <% end %>
        </tbody>
      </table>


    </div>
  </div>
</div>
