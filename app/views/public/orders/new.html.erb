<div class="container">
	<div class="row">
	  <div class="offset-md-1 col-md-10 offset-md-1">
      <h2>注文情報入力</h2>
      <%= form_with model: @order, url: orders_confirmation_path do |f| %>

      <p class="font-weight-bold">支払方法</p>
          <div class="form-group">
            <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
            <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>

            <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
            <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%>

          </div>

      <p class="font-weight-bold">お届け先</p>
          <div class="form-group">
          <%= f.radio_button :select_address, 0 %>
          <%= f.label :ご自身の住所 %>

          <p>
          <span>
            <%= @customers.postal_code %><%= @customers.address %><%= @customers.last_name %><%= @customers.first_name %>
          </span>
          </p>
          </div>

          <div class="form-group">
          <%= f.radio_button :select_address, 1 %>
          <%= f.label :登録済住所から選択 %>
          <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
          </div>

          <div class="form-group">
          <%= f.radio_button :select_address, 2 %>
          <%= f.label :新しいお届け先 %>
          <label class="form-check-label" for="radio_1_1">新しいお届け先</label>
          <div class="form-group row form-inline ">
            <%= f.label :postal_code, "郵便番号(ハイフンなし）", class: "col-md-4" %>
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "col-md-3" %>
            </div>

      	    <div class="form-group row form-inline ">
            <%= f.label :address, "住所", class: "col-md-4" %>
            <%= f.text_field :address, autofocus: true, autocomplete: "postal_code", class: "col-md-3" %>
            </div>

            <div class="form-group row form-inline ">
            <%= f.label :name, "宛名", class: "col-md-4" %>
            <%= f.text_field :name, autofocus: true, autocomplete: "postal_code", class: "col-md-3" %>
          </div>
          </div>
         <%= f.submit '確認画面に進む', class:"btn btn-sm btn-success" %>
         <% end %>
        </div>

    </div>
  </div>
</div>